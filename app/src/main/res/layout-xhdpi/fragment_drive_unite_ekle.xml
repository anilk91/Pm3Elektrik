<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F9FD"
        tools:context=".MotorListeSayfasi.DriveUniteleriSayfasi.DriveUniteEkle.DriveUniteEkle">


    <ImageView
        android:id="@+id/imgDriveUniteEkleClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgDriveUniteEkleClose">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etDriveMotorIsim"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Motor İsim"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView127" />

                    <EditText
                        android:id="@+id/etDriveMotorTag"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Motor Tag"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@+id/etDriveMotorIsim"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorIsim" />

                    <EditText
                        android:id="@+id/etDriveMotorGuc"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Güç"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorIsim"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorIsim" />

                    <EditText
                        android:id="@+id/etDriveMotorDevir"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Devir"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorTag"
                        app:layout_constraintStart_toStartOf="@+id/etDriveMotorTag"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorGuc" />

                    <EditText
                        android:id="@+id/etDriveMotorTripAkimi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Trip Akımı"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorGuc"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorGuc" />

                    <EditText
                        android:id="@+id/etDriveMotorInsaTipi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="İnşa Tipi"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@+id/etDriveMotorDevir"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorDevir" />

                    <EditText
                        android:id="@+id/etDriveMotorFlans"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Flanş"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorTripAkimi"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorTripAkimi" />

                    <EditText
                        android:id="@+id/etDriveMotorAdres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Adres"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorFlans"
                        app:layout_constraintStart_toStartOf="@+id/etDriveMotorInsaTipi"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorInsaTipi" />

                    <EditText
                        android:id="@+id/etDriveMotorDegTarihi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Motor Değişim Tarihi"
                        android:inputType="date"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveMotorAdres"
                        app:layout_constraintStart_toStartOf="@+id/etDriveMotorAdres"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveMotorAdres" />

                    <TextView
                            android:id="@+id/textView127"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/nunito_extrabold"
                            android:text="- DRİVE MOTOR -"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView5"
                    app:layout_constraintStart_toStartOf="@+id/cardView5"
                    app:layout_constraintTop_toBottomOf="@+id/cardView5">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Spinner
                            android:id="@+id/spinnerDriveUniteSecim"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView126" />

                    <EditText
                        android:id="@+id/etDriveUniteSeriNoU"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Seri No (U)"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@+id/spinnerDriveUniteSecim"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerDriveUniteSecim" />

                    <EditText
                        android:id="@+id/etDriveUniteSeriNoV"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Seri No (V)"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveUniteSeriNoU"
                        app:layout_constraintStart_toStartOf="@+id/etDriveUniteSeriNoU"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveUniteSeriNoU" />

                    <EditText
                        android:id="@+id/etDriveUniteSeriNoW"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="Seri No (W)"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveUniteSeriNoV"
                        app:layout_constraintStart_toStartOf="@+id/etDriveUniteSeriNoV"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveUniteSeriNoV" />

                    <TextView
                            android:id="@+id/textView126"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/nunito_extrabold"
                            android:text="- SÜRÜCÜ -"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etDriveUniteUDegTarihi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="U Modül Değ. Tarihi"
                        android:inputType="date"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/spinnerDriveUniteSecim"
                        app:layout_constraintTop_toBottomOf="@+id/spinnerDriveUniteSecim" />

                    <EditText
                        android:id="@+id/etDriveUniteVDegTarihi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="V Modül Değ. Tarihi"
                        android:inputType="date"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveUniteUDegTarihi"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveUniteUDegTarihi" />

                    <EditText
                        android:id="@+id/etDriveUniteWDegTarihi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ems="10"
                        android:fontFamily="@font/nunito_extrabold"
                        android:hint="W Modül Değ. Tarihi"
                        android:inputType="date"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/etDriveUniteVDegTarihi"
                        app:layout_constraintTop_toBottomOf="@+id/etDriveUniteVDegTarihi" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                    android:id="@+id/buttonDriveEkle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="EKLE"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>