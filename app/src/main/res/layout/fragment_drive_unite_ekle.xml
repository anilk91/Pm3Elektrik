<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F9FD"
        tools:context=".DigerBilgilerSayfasi.DriveUniteleriSayfasi.DriveUniteEkle.DriveUniteEkle">


    <ImageView
            android:id="@+id/imgDriveUniteEkleClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgDriveUniteEkleClose">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/etDriveMotorTag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="32dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="TAG No"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                            android:id="@+id/etDriveGuc"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Güç"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorTag"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorTag" />

                    <EditText
                            android:id="@+id/etDriveAkim"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Akım"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@+id/etDriveVoltaj"
                            app:layout_constraintStart_toEndOf="@+id/etDriveGuc"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorTag" />

                    <EditText
                            android:id="@+id/etDriveVoltaj"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Voltaj"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorTag"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorTag" />

                    <EditText
                            android:id="@+id/etDriveModul"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Modül"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveVoltaj"
                            app:layout_constraintStart_toStartOf="@+id/etDriveGuc"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveAkim" />

                    <EditText
                            android:id="@+id/etDriveCode"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Code"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="@+id/etDriveModul"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveModul" />

                    <EditText
                            android:id="@+id/etDriveSeriNo"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Seri No"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveModul"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveModul" />

                    <EditText
                            android:id="@+id/etDriveIGBT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="IGBT"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveSeriNo"
                            app:layout_constraintStart_toStartOf="@+id/etDriveCode"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveCode" />

                    <EditText
                            android:id="@+id/etDriveKondansator"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Kondansatör"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveIGBT"
                            app:layout_constraintStart_toStartOf="@+id/etDriveIGBT"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveIGBT" />

                    <EditText
                            android:id="@+id/etDriveThick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Thick-FirmHybrid"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveKondansator"
                            app:layout_constraintStart_toStartOf="@+id/etDriveKondansator"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveKondansator" />

                    <EditText
                            android:id="@+id/etDriveTetiklemeAna"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Tetikleme (Ana) PC"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveThick"
                            app:layout_constraintStart_toStartOf="@+id/etDriveThick"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveThick" />

                    <EditText
                            android:id="@+id/etDriveIGBTTetikleme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="IGBT Tetikleme"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveTetiklemeAna"
                            app:layout_constraintStart_toStartOf="@+id/etDriveTetiklemeAna"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveTetiklemeAna" />

                    <EditText
                            android:id="@+id/etDriveTetiklemeBesPCB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Tetikleme Bes. PCB"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveIGBTTetikleme"
                            app:layout_constraintStart_toStartOf="@+id/etDriveIGBTTetikleme"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveIGBTTetikleme" />

                    <EditText
                            android:id="@+id/etDriveNintBesleme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Nint Besleme PCB"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveTetiklemeBesPCB"
                            app:layout_constraintStart_toStartOf="@+id/etDriveTetiklemeBesPCB"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveTetiklemeBesPCB" />

                    <EditText
                            android:id="@+id/etDrive24VBesleme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="24V Besleme"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveNintBesleme"
                            app:layout_constraintStart_toStartOf="@+id/etDriveNintBesleme"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveNintBesleme" />

                    <EditText
                            android:id="@+id/etDriveKontrolUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Drive Kont. Unit"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDrive24VBesleme"
                            app:layout_constraintStart_toStartOf="@+id/etDrive24VBesleme"
                            app:layout_constraintTop_toBottomOf="@+id/etDrive24VBesleme" />

                    <EditText
                            android:id="@+id/etDriveFan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Fan"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveKontrolUnit"
                            app:layout_constraintStart_toStartOf="@+id/etDriveKontrolUnit"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveKontrolUnit" />

                    <EditText
                            android:id="@+id/etDriveSigorta1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Sigorta"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveFan"
                            app:layout_constraintStart_toStartOf="@+id/etDriveFan"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveFan" />

                    <EditText
                            android:id="@+id/etDriveSigorta2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Sigorta"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveSigorta1"
                            app:layout_constraintStart_toStartOf="@+id/etDriveSigorta1"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveSigorta1" />

                    <EditText
                            android:id="@+id/etDriveUniteDegTarih"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Ünite Değişim Tarihi"
                            android:inputType="date"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveSigorta2"
                            app:layout_constraintStart_toStartOf="@+id/etDriveSigorta2"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveSigorta2" />

                    <EditText
                            android:id="@+id/etDriveMotorDegTarihi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Motor Değişim Tarihi"
                            android:inputType="date"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveUniteDegTarih"
                            app:layout_constraintStart_toStartOf="@+id/etDriveUniteDegTarih"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveUniteDegTarih" />

                    <Button
                            android:id="@+id/buttonDriveEkle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="8dp"
                            android:text="EKLE"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveSigorta2"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="@+id/etDriveSigorta2"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorDegTarihi"
                            app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>