<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F9FD"
        tools:context=".MotorListeSayfasi.DriveUniteleriSayfasi.DriveUniteEkle.DriveUniteEkle">


    <ImageView
            android:id="@+id/imgDriveUniteEkleClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgDriveUniteEkleClose">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/etDriveMotorIsim"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="32dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Motor İsim"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                            android:id="@+id/etDriveMotorTag"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Motor Tag"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorIsim"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorIsim" />

                    <EditText
                            android:id="@+id/etDriveMotorGuc"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Güç"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorIsim"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorIsim" />

                    <EditText
                            android:id="@+id/etDriveMotorDevir"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Devir"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorTag"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorTag"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorGuc" />

                    <EditText
                            android:id="@+id/etDriveMotorTripAkimi"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Trip Akımı"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorGuc"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorGuc" />

                    <EditText
                            android:id="@+id/etDriveMotorInsaTipi"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="İnşa Tipi"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorDevir"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorDevir" />

                    <EditText
                            android:id="@+id/etDriveMotorFlans"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Flanş"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorTripAkimi"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorTripAkimi" />

                    <EditText
                            android:id="@+id/etDriveMotorAdres"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Adres"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorFlans"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorInsaTipi"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorInsaTipi" />

                    <EditText
                            android:id="@+id/etDriveUniteSeriNoU"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Drive Ünite Seri No (U)"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/spinnerDriveUniteSecim"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/spinnerDriveUniteSecim"
                            app:layout_constraintTop_toBottomOf="@+id/spinnerDriveUniteSecim" />

                    <EditText
                            android:id="@+id/etDriveUniteSeriNoV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Drive Ünite Seri No (V)"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveUniteSeriNoU"
                            app:layout_constraintStart_toStartOf="@+id/etDriveUniteSeriNoU"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveUniteSeriNoU" />

                    <EditText
                            android:id="@+id/etDriveUniteSeriNoW"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Drive Ünite Seri No (W)"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveUniteSeriNoV"
                            app:layout_constraintStart_toStartOf="@+id/etDriveUniteSeriNoV"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveUniteSeriNoV" />

                    <EditText
                            android:id="@+id/etDriveMotorDegTarihi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ems="10"
                            android:fontFamily="@font/nunito_extrabold"
                            android:hint="Motor Değişim Tarihi"
                            android:inputType="date"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorAdres"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorAdres"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorAdres" />

                    <Spinner
                            android:id="@+id/spinnerDriveUniteSecim"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveMotorDegTarihi"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/etDriveMotorDegTarihi"
                            app:layout_constraintTop_toBottomOf="@+id/view15" />

                    <View
                            android:id="@+id/view15"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/darker_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveMotorDegTarihi" />

                    <Button
                            android:id="@+id/buttonDriveEkle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="16dp"
                            android:text="EKLE"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/etDriveUniteSeriNoW"
                            app:layout_constraintStart_toStartOf="@+id/etDriveUniteSeriNoW"
                            app:layout_constraintTop_toBottomOf="@+id/etDriveUniteSeriNoW" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>