<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".MotorListeSayfasi.EkleFragmentleri.EasySoftstarterEkle">
    <ImageView
            android:src="@drawable/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imgClose" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etEasySoftModel"
            android:hint="Model Seri No" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEasySoftStarter" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/etEasySoftDegisimTarihi"
            app:layout_constraintStart_toStartOf="@+id/etEasySoftModel"
            app:layout_constraintEnd_toEndOf="@+id/etEasySoftModel"
            app:layout_constraintTop_toBottomOf="@+id/etEasySoftModel" android:layout_marginTop="16dp"
            android:hint="Değişim Tarihi"/>
    <Button
            android:text="EKLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEkle" app:layout_constraintEnd_toEndOf="@+id/etEasySoftDegisimTarihi"
            app:layout_constraintStart_toStartOf="@+id/etEasySoftDegisimTarihi"
            app:layout_constraintTop_toBottomOf="@+id/etEasySoftDegisimTarihi" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" android:fontFamily="@font/roboto_medium"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Easy SoftStarter"
            android:ems="10"
            android:id="@+id/etEasySoftStarter"
            app:layout_constraintTop_toBottomOf="@+id/imgClose" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/etEasySoftModel"
            app:layout_constraintEnd_toEndOf="@+id/etEasySoftModel"/>
</androidx.constraintlayout.widget.ConstraintLayout>